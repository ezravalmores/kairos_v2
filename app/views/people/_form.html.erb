<%= form_for @person, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_address, :class => 'text_field' %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :time_zone, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :time_zone, ([['Kansas','America/Chicago'], ['Manila', 'Asia/Manila']]) %>
    </div>
  </div>

  <div class='control-group'>
     <%= f.label :organization_id, "Organization" ,:class => 'control-label' %>
     <div class ="controls">	
	    <%= f.select(:organization_id, Organization.all.collect{|o| [o.name, o.id] }, :class => 'text_field') %>
     </div> 
  </div>

  <div class='control-group'>
     <%= f.label :department, :class => 'control-label' %>
     <div class ="controls">	
	   <%= f.select(:department_id, Department.all.collect{|d| [d.name, d.id] }, :class => 'text_field') %>
     </div>
  </div>

  <div class='control-group'>
     <%= f.label :role_id, :class => 'control-label' %>
     <div class ="controls">	
	    <%= f.select(:role_id, Role.all.collect{|r| [r.name, r.id] }, :class => 'text_field') %>
     </div> 
  </div>

  <div class="control-group">
    <%= f.label :can_approve, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :can_approve, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                people_path, :class => 'btn' %>
  </div>
<% end %>
