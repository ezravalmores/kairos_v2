<script>
  $(document).ready(function() {	  
    $("#approval_search select").change(function(){
      dataString = $("#approval_search").serialize();
	  $.ajax({
	    type: "GET",
		dataType: "script",
		url: "/tasks_approval",
		data: dataString,
		  beforeSend: function(data)
		  {
		    $('#spin_spin').show();	   
		  },
		  success: function(response)
		  {
		    $('#spin_spin').hide();	
		  }
	   });
	   return false;
    });	
  });
</script>

<div class="span12 body_layout" >
	<div class='own_page_header'>	
	   <h3>Tasks Approval</h3>
	   <div style='margin-top:-15px'>
	     <p>approve or reject a tasks<p>
	     <font style='color:red'><b><%="#{@total_count}" %></font> submitted for approval</b>	
	   </div>
	
	   <div id='spin_spin' class='pull-right' style='display:none;margin-top:-100px'>
	     <%= image_tag 'spin.gif' %>
	   </div>
	</div>
  <div style='padding:20px'>
	
	<br/>
	
	<%= form_tag tasks_approval_path, :method => 'get', :id => 'approval_search', :class => "form-search pull-right" do %>
	
    <div class='pull-left' style='margin-left: 0px'>
	  <label>Employee Name</label>
	  <%= select_tag("person", options_from_collection_for_select(options_for_employees, :id, :first_name ,""), :include_blank => true) %>
	</div>
	
	<div id='for_approval'>
	  <%= render partial: 'to_be_approved' %>
	</div>
	
   <% end %>
  </div>
</div>	