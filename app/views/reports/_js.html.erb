<script>
   $(document).ready(function() {
	$('.input-group.date').datepicker({
	  format: "yyyy-mm-dd",
	  autoclose: true	
	});
	
	$('#basic_link').click(function(){
	  $('#basic').hide();
	  $('#advance').show();	
	 $(this).closest('form').find("input[type=text], textarea").val("");
	});
	
	$('#advance_link').click(function(){
	  $('#advance').hide();	 
	  $('#basic').show();	
	 $(this).closest('form').find("input[type=text], textarea").val("");
	});
	
	$("#utilization_rate_form select").change(function(){
      dataString = $("#utilization_rate_form").serialize();
	  $.ajax({
	    type: "GET",
		dataType: "script",
		url: "/utilization_rates",
		data: dataString,
		  beforeSend: function(data)
		  {
		    $('#spin_spin').show();
		  },
		  success: function(response)
		  {
		    $('#spin_spin').hide();	
		  }

	   });

	   return false;
    });
  });
</script>