<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label :task_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :task_id, role_tasks, :task_id, :name, :include_blank => true  %><br/>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :specific_task_id, :class => 'control-label' %>
    <div class="controls">
	  <%= f.grouped_collection_select :specific_task_id, role_tasks, :role_specific_tasks, :name ,:specific_task_id, :name, :include_blank => true  %><br/><br/>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start,:value => @task.start.strftime('%Y-%m-%d  %H:%M:%S') ,:class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end, :class => 'control-label' %>
    <div class="controls">
	  <% if !@task.end.nil?  %>
        <%= f.text_field :end,:value => @task.end.strftime('%Y-%m-%d  %H:%M:%S'),:class => 'text_field' %>
	  <% else %>	
        <%= f.text_field :end,:class => 'text_field' %>  
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :person_in_charge, :class => 'control-label' %>
    <div class="controls">
	  <% if !@task.end.nil?  %>
        <%= f.text_field :person_in_charge,:value => @task.person_in_charge,:class => 'text_field' %>
	  <% else %>	
        <%= f.text_field :person_in_charge,:class => 'text_field' %>  
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
	  <% if !@task.end.nil?  %>
        <%= f.text_area :note,:value => @task.note,:class => 'text_field' %>
	  <% else %>
        <%= f.text_area :note,:class => 'text_field' %>  
      <% end %>
    </div>
  </div>
 
  <%= hidden_field_tag :from, 'task form' %>          
    
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                person_tasks_path, :class => 'btn' %>
  </div>

<% end %>
